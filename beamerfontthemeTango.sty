% Load packages
\RequirePackage[familydefault]{Chivo}
\RequirePackage[mono]{inconsolata}
\RequirePackage[T1]{fontenc}

% Title frame
\setbeamerfont{title}{family = \sffamily, size = {\fontsize{20pt}{20pt}\selectfont}, series = \bfseries}
\setbeamerfont{subtitle}{family = \sffamily, size = \huge, series = \normalfont}

\setbeamerfont{author}{family = \sffamily, size = \large, series = \normalfont}
\setbeamerfont{institute}{family = \sffamily, size = \large, series = \normalfont}

% Section frame
\setbeamerfont{sectionframe}{family = \sffamily, size = \Large, series = \normalfont}
\setbeamerfont{sectionframetitle}{family = \sffamily, size = {\fontsize{32pt}{32pt}\selectfont}, series = \bfseries}

% Normal text
\setbeamerfont{normal text}{family = \sffamily}

% Outer theme
\setbeamerfont{framesection}{family = \sffamily, size = \huge, series = \bfseries}
\setbeamerfont{frametitle}{family = \sffamily, size = \large, series = \normalfont}
\setbeamerfont{footline}{family = \sffamily, size = \footnotesize, series = \normalfont}

% Itemize & Enumerate
\setbeamerfont{itemize/enumerate body}{size = \normalsize}
\setbeamerfont{itemize/enumerate subbody}{size = \normalsize}
\setbeamerfont{itemize/enumerate subsubbody}{size = \normalsize}

% TOC
\setbeamerfont{section in toc}{family = \sffamily, size  = \large, series = \bfseries}
\setbeamerfont{subsection in toc}{family = \sffamily, series = \normalfont}
\setbeamerfont{subsubsection in toc}{family = \sffamily, series = \itshape}

% Blocks
\setbeamerfont*{block title}{family = \sffamily, series = \bfseries}
